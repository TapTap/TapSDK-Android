<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="登陆相关："
            android:textColor="@color/gray"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap">

            <Button
                android:id="@+id/btn_tap_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登 陆" />

            <Button
                android:id="@+id/btn_tap_loginstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="登录状态" />

            <Button
                android:id="@+id/btn_tap_gouhuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="篝火测试" />

            <Button
                android:id="@+id/btn_tap_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="登 出" />

            <Button
                android:id="@+id/btn_tap_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="付费检查" />
        </com.google.android.flexbox.FlexboxLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="内嵌动态相关："
            android:textColor="@color/gray"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap">

            <Button
                android:id="@+id/btn_tap_fetch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取新消息" />

            <Button
                android:id="@+id/btn_tap_open_moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="打开动态" />

            <Button
                android:id="@+id/btn_tap_directly_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="场景化入口" />

            <Button
                android:id="@+id/btn_tap_close_moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭动态" />

            <Button
                android:id="@+id/btn_tap_one_key_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="发布动态" />
        </com.google.android.flexbox.FlexboxLayout>


        <TextView
            android:id="@+id/tx_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:text="" />

    </LinearLayout>


</LinearLayout>